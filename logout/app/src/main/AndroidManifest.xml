<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.virginmobile.myaccount.virginmobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity android:name=".ui.Login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.Landing.view.LandingActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.MyProfile.view.MyProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Settings.view.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".ui.StoreLocator.view.StoreLocatorActivity"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".base.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>