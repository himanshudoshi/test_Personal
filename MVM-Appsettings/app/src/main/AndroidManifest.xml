<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.virginmobile.myaccount.virginmobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NMF.Styles.Defaults.Theme"
        tools:replace="android:theme"
        android:fullBackupContent="@xml/backup_descriptor"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.landing.view.LandingActivity"/>
        <activity android:name=".ui.myProfile.view.MyProfileActivity" />
        <activity android:name=".ui.settings.view.SettingsActivity" />
        <activity android:name=".ui.storeLocator.view.StoreLocatorActivity" />

        <activity android:name=".ui.settings.view.AboutApp" />

        <activity android:name=".ui.settings.view.PrivacyAgreement" />
        <activity android:name=".base.AppBaseActivity" />


    </application>

</manifest>