<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bannerAdvertisingImageView"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/padding_margin_double"
        android:layout_marginLeft="@dimen/padding_margin_double"
        android:layout_marginTop="@dimen/padding_margin_double"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/titleTextView"
        style="@style/NMF.Styles.Text.Caption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_margin_double"
        android:layout_marginRight="@dimen/padding_margin"
        android:textAllCaps="true"
        android:textColor="@color/critical_color"
        app:layout_constraintLeft_toRightOf="@+id/bannerAdvertisingImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bannerAdvertisingImageView" />

    <TextView
        android:id="@+id/descriptionTextView"
        style="@style/NMF.Styles.Text.BigBody.SemiBold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/padding_margin_double"
        android:layout_marginRight="@dimen/padding_margin"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/titleTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

</android.support.constraint.ConstraintLayout>